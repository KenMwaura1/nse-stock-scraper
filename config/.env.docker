# Copy this file to .env and fill in your actual values for Docker/docker-compose

# Africa's Talking credentials
at_username=your_africas_talking_username
at_api_key=your_africas_talking_api_key

# Phone number to receive stock notifications (include country code)
mobile_number=+254your_phone_number

# MongoDB Atlas connection string (for local MongoDB, use: mongodb://mongodb:27017/)
MONGODB_URI=mongodb://mongodb:27017/

# MongoDB database name
MONGODB_DATABASE=nse_data
